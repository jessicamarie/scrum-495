<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.cs495.aahmed31.scrumkickoff.HomeFragment">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:maxHeight="200dp"
            android:maxWidth="200dp"
            android:id="@+id/homeLogo"
            android:src="@mipmap/ko_logo"
            android:layout_centerHorizontal="true"
            android:paddingTop="-20dp"
            android:layout_marginTop="-20dp"
            android:layout_alignParentTop="true" />

        <TextView android:text="Project Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/projNametxt"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@+id/homeLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:paddingTop="-10dp" />

    <Button
        android:text="Stories"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:id="@+id/story_b"
        android:textSize="18dp"
        android:layout_below="@+id/projNametxt"
        android:background="@color/pink"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Schedule"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/story_b"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:textSize="18dp"
        android:id="@+id/schedule_b"
        android:background="@color/light_blue"/>

    <Button
        android:text="Sprint\nPlanning"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:id="@+id/sprint_b"
        android:textSize="18dp"
        android:layout_below="@+id/story_b"
        android:layout_alignStart="@+id/story_b"
        android:background="@color/green"/>

    <Button
        android:text="Back Log"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/sprint_b"
        android:layout_alignStart="@+id/schedule_b"
        android:id="@+id/backlg_b"
        android:textSize="18dp"
        android:background="@color/orange"/>

    <Button
        android:text="Tutorials"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_below="@+id/sprint_b"
        android:layout_marginTop="5dp"
        android:id="@+id/tutor_b"
        android:textSize="18dp"
        android:background="@color/purple"
        android:layout_centerHorizontal="true"
        android:onClick="tutorialsButton"/>
</RelativeLayout>
